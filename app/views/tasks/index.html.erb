<h1>Tasks</h1>

<div>
<ol>
<% @tasks.each do|task| %>
  <li><input type="checkbox" id="tasks" name="tasks" unchecked>
  <label for="tasks"><%= link_to task.title, task_path(task) %></label>
  <%= link_to "🗑️", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end %>
</ol>
</div>


<hr>

<%= link_to "+ Create new taks", new_task_path %>
